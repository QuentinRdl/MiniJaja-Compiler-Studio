<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.ufrst.m1info.gl.compgl.driver.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <top>
    <Label text="Interpréteur" />
  </top>

  <center>
    <VBox alignment="CENTER" spacing="20.0">

      <HBox alignment="CENTER" spacing="20.0">
        <padding>
          <Insets top="10.0"/>
        </padding>

        <Button text="Choisir un fichier" fx:id="btnSelectFile" onAction="#selectFileButton"/>
        <Label text="Aucun fichier sélectionné" fx:id="fileLabel"/>
      </HBox>

      <GridPane hgap="15.0" vgap="10" VBox.vgrow="ALWAYS">
        <padding>
          <Insets bottom="10.0" top="10.0"/>
        </padding>

        <columnConstraints>
          <ColumnConstraints percentWidth="60"/>
          <ColumnConstraints percentWidth="40"/>
        </columnConstraints>

        <TextArea fx:id="viewer" editable="false" GridPane.columnIndex="0" GridPane.vgrow="ALWAYS"/>
        <TextArea fx:id="memoryState" editable="false" GridPane.columnIndex="1" GridPane.vgrow="ALWAYS" />
      </GridPane>

    </VBox>
  </center>

  <bottom>
    <TextArea fx:id="output" editable="false" prefHeight="150"/>
  </bottom>

</BorderPane>

