<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.ListView?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.ufrst.m1info.gl.compgl.driver.HelloController">

  <top>
    <ToolBar>
      <Button text="Open" fx:id="btnSelectFile" onAction="#selectFileButton"/>
      <Button text="Save" fx:id="btnSave"/>
      <Button text="Run" fx:id="btnRun"/>
      <Button text="Compile" fx:id="btnCompile"/>
      <Button text="Compile and run" fx:id="btnRunCompile"/>
    </ToolBar>
  </top>

  <center>
    <VBox alignment="CENTER" spacing="20.0">
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>

      <HBox alignment="CENTER" spacing="20.0">
        <padding>
          <Insets top="10.0"/>
        </padding>

        <Label text="No files selected" fx:id="fileLabel"/>
      </HBox>

      <ListView fx:id="codeListView" VBox.vgrow="ALWAYS"/>

      <GridPane hgap="15.0" vgap="10" VBox.vgrow="ALWAYS">
        <padding>
          <Insets bottom="10.0" top="10.0"/>
        </padding>

        <columnConstraints>
          <ColumnConstraints percentWidth="60"/>
          <ColumnConstraints percentWidth="40"/>
        </columnConstraints>

        <TextArea fx:id="viewer" editable="false" GridPane.columnIndex="0" GridPane.vgrow="ALWAYS"/>
        <TextArea fx:id="memoryState" editable="false" GridPane.columnIndex="1" GridPane.vgrow="ALWAYS" />
      </GridPane>

    </VBox>
  </center>

  <bottom>
    <VBox>
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>

      <TextArea fx:id="output" editable="false" prefHeight="150"/>
    </VBox>
  </bottom>

</BorderPane>

